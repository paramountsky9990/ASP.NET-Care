@model HGP.Web.Models.UnsubscribeHomeModel
@using HGP.Common;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
    ViewBag.MainClass = "content_full_width";
}


<style>
    a.disabled {
        color: gray;
    }

    #product-grid td label.mouse_link:hover {
        text-decoration: underline;
    }

    .main-area {
        width: 980px;
        margin: 0 auto;
    }

    .table.table-hover tr td b {
        background: none !important;
    }  

    
    .smart-form1 .checkbox, .smart-form1 .radio {
        margin-bottom: 4px;
        padding-left: 25px;
        line-height: 25px;
        color: #404040;
        cursor: pointer;
        font-size: 13px;
    }

        .smart-form1 .checkbox:last-child, .smart-form1 .radio:last-child {
            margin-bottom: 0;
        }

        .smart-form1 .checkbox input, .smart-form1 .radio input {
            position: absolute;
            left: -9999px;
        }

        .smart-form1 .checkbox i, .smart-form1 .radio i {
            position: absolute;
            top: 3px;
            left: 0;
            display: block;
            width: 17px;
            height: 17px;
            outline: 0;
            border-width: 1px;
            border-style: solid;
            background: #FFF;
        }

        .smart-form1 .radio i {
            border-radius: 50%;
        }

        .smart-form1 .checkbox input + i:after, .smart-form1 .radio input + i:after {
            position: absolute;
            opacity: 0;
            transition: opacity .1s;
            -o-transition: opacity .1s;
            -ms-transition: opacity .1s;
            -moz-transition: opacity .1s;
            -webkit-transition: opacity .1s;
        }

        .smart-form1 .radio input + i:after {
            content: '';
            top: 4px;
            left: 4px;
            width: 9px;
            height: 9px;
            border-radius: 50%;
        }

        .smart-form1 .checkbox input + i:after {
            content: '\f00c';
            top: -1px;
            left: 1px;
            width: 15px;
            height: 15px;
            font: 400 16px/19px FontAwesome;
            text-align: center;
        }

        .smart-form1 .checkbox input:checked:hover + i:after {
            content: '\f00d';
        }

        .smart-form1 .checkbox input:checked:disabled:hover + i:after {
            content: '\f00c';
        }

        .smart-form1 .checkbox input:checked + i:after, .smart-form1 .radio input:checked + i:after {
            opacity: 1;
        }

    .smart-form1 .inline-group {
        margin: 0 -15px -4px 0;
    }

        .smart-form1 .inline-group:after {
            content: '';
            display: table;
            clear: both;
        }

        .smart-form1 .inline-group .checkbox, .smart-form1 .inline-group .radio {
            float: left;
            margin-right: 30px;
        }

            .smart-form1 .inline-group .checkbox:last-child, .smart-form1 .inline-group .radio:last-child {
                margin-bottom: 4px;
            }

    .smart-form1 input.input-lg {
        height: 44px;
        padding: 10px 16px;
        font-size: 17px;
        line-height: 1.33;
    }

    .smart-form1 input.input-sm {
        height: 30px;
        padding: 5px 10px;
        font-size: 12px;
        line-height: 1.5;
    }

    .smart-form1 input.input-xs {
        height: 24px;
        padding: 2px 10px;
        font-size: 11px;
        line-height: 1.5;
    }

    .smart-form1 select.input-sm {
        height: 30px;
        line-height: 15px;
        font-size: 12px;
    }

        .smart-form1 select.input-sm + i {
            height: 10px;
        }

    .smart-form1 select.input-lg {
        height: 44px;
        line-height: 22px;
        font-size: 17px;
    }

        .smart-form1 select.input-lg + i {
            height: 11px;
            top: 17px;
        }

    .smart-form1 .checkbox input + input[type=hidden] + i:after {
        content: '\f00c';
        top: -1px;
        left: 1px;
        width: 15px;
        height: 15px;
        font: 400 16px/19px FontAwesome;
        text-align: center;
    }

    .smart-form1 .checkbox input:checked:hover + input[type=hidden] + i:after {
        content: '\f00d';
    }

    .smart-form1 .checkbox input:checked:disabled:hover + input[type=hidden] + i:after {
        content: '\f00c';
    }

    .smart-form1 .checkbox input:checked + input[type=hidden] + i:after {
        opacity: 1;
    }

    .smart-form1 .toggle input:checked + input[type=hidden] + i:after {
        content: attr(data-swchon-text);
        text-align: right;
    }

    .smart-form1 .toggle input:checked + input[type=hidden] + i:before {
        right: 36px;
    }
</style>


<section id="widget-grid" class="">

    <div class="tt-icon-box-fixed text-align-left padding-bottom-5">
        <div>
            <h3 class="margin-top-0" style="text-align:center;font-weight:bold;">
                Unsubscribe
            </h3>
        </div>
    </div>

    <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="jarviswidget well">
                <div role="content">
                    <!-- widget content -->
                    <div class="widget-body no-padding">
                        <div class="row">
@using (Html.BeginRouteForm("PortalRoute", new { controller = "Unsubscribe", Action = "Index" }, FormMethod.Post, new { @class = " ", role = "form" }))
{
    @Html.HiddenFor(m => m.Unsubscribe.PortalId)
    @Html.HiddenFor(m => m.Unsubscribe.PortalUserEmail)
    @Html.HiddenFor(m => m.Unsubscribe.PortalUserId)
    <div class="col-md-11 col-md-offset-1" style="margin-left: 4.4%">
        <div id="pending-requests" class="padding-10 no-padding-left">
            <table id="product-grid" class="table table-striped table-bordered table-hover">
                <tbody id="list-container">
                <tr>
                    <td width="100%">
                        <div class="row">
                            <div class="col-md-12">
                                <p>
                                    You are currently subscribed to the following types of emails.
                                    Please update your choice.<br/>
                                </p>
                                <table id="product-grid" class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th width="100%" style="text-align: center; font-size: small;">
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td width="100%">
                                            Your email address: @Model.Unsubscribe.PortalUserEmail
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>

                                            @{
                                                <div class="smart-form1">
                                                    <label class="radiobox">
                                                        @Html.RadioButtonFor(m => m.Unsubscribe.MailType, "ReceiveAll")
                                                        <i></i> <span>All emails</span>
                                                    </label>
                                                </div>

                                                <div class="smart-form1">
                                                    <label class="radiobox">
                                                        @Html.RadioButtonFor(m => m.Unsubscribe.MailType, "ReceiveNone")
                                                        <i></i><span>No daily or weekly emails *</span>
                                                    </label>
                                                </div>
                                            }



                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="100%">
                                            <span class="text-muted pull-left">* You will continue to receive transaction related messages</span>
                                            <div class="col-xs-1 col-md-1  margin-right-10">
                                                <input type="submit" value="Submit" class="btn btn-primary btn-sm" style="font-size: 18px;padding: 4px 10px 4px;" />
                                            </div>
                                        </td>
                                    </tr>

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </td>
                </tr>

                </tbody>
            </table>
        </div>
    </div>
}
                        </div>
                    </div>
                    <!-- end widget content -->
                </div>
            </div>
            <!-- end widget div -->
        </article>
    </div>
</section>


<script>

    $(document).ready(function () {

        $(".search-form").css("display", "none");
        $("#HeaderModel_SearchText").css("display", "none");

    });

</script>