@model GuestLoginViewModel
@{
    Layout = "~/Views/Shared/_PortalGuestLayout.cshtml";
    ViewBag.Title = "Customer Sign in";
}

<ul class="slides">
    <li class="jqslider karma-slider-normal-image">
        <div class="slider-content-main">
            <section id="loginForm">
                @using (Html.BeginRouteForm("GuestRoute", new { ReturnUrl = ViewBag.ReturnUrl, controller = "Account", action = "GuestLogin" }, FormMethod.Post, new { @class = "smart-form contact-form form-horizontal", role = "form", novalidate="novalidate" }))
                {
                    <div class="form-group">
                        <h2 class="slider-post-title">@ViewBag.Title</h2>
                    </div>
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.ValidationSummary()
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label class="name" for="email">
                                Email
                            </label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email address" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "required" }, "em")
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label class="name" for="phone">
                                Password
                            </label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "required" }, "em")
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Sign in to CARE" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="form-group">
                        <p>
                            <a href="@Url.RouteUrl("GuestRoute", new { action = "guestforgotpassword", controller = "account" })">Forgot your password?</a>
                        </p>
                    </div>
                }
            </section>
        </div>
        <!-- END slider-content-main -->
        <div class="slider-content-sub guest-login-img icon-align-center">
            <div class="horizontal login-box">
                <div class="vertical">
                    <img class="login-logo" src="~/Content/img/hgp/HGP_Care_Logo2.png" alt="" />
                </div>
            </div>
        </div><!-- END slider-content-sub -->
    </li>
</ul>

