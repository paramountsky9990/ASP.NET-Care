@model HGP.Web.Models.Account.ProfileHomeModel
@{
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
    ViewBag.Title = "User Profile";
}

<style>
    .content-style-default .section-heading-horizontal::before {
        border-bottom: 1px solid #d9dee4;
        border-top: 1px solid #d8d8d6;
    }

    .section-heading-horizontal {
        position: relative;
        margin-top: 20px;
        text-align: center;
        padding-top:0;
        margin-bottom: 20px;
    }

    .section-heading-horizontal:before {
        content: "";
        display: block;
        width: 100%;
        height: 0;
        position: absolute;
        top: 50%;
        z-index: 1;
    }



    .section-heading-horizontal span {
        background: #f4f4f2;
        padding: 0 10px;
        position: relative;
        z-index: 5;
        color: #444;
        font-weight: bold;
        font-size: 18px;
    }

    p + .section-heading-horizontal {
        padding-top: 0;
    }

    .padding-bottom-25 {
        padding-bottom: 25px;
    }
</style>

<ul class="slides">
    <li class="jqslider ">
        <div class="slider-content-main col col-md-offset-3 col-md-8">
            <section id="loginForm">
                @{ Html.RenderPartial("_UserProfile_EditContactInfo", Model.ContactInfoModel); }
                @{ Html.RenderPartial("_UserProfile_EditAddress", Model.AddressModel); }
                @if (Model.SiteSettings.AllowSelfSelectedApprovers)
                {
                    Html.RenderPartial("_UserProfile_EditManager", Model.ManagerModel); 
                }
                @{ Html.RenderPartial("_UserProfile_EditPassword", Model.PasswordModel); }

    </section>
        </div>

    </li>
</ul>
